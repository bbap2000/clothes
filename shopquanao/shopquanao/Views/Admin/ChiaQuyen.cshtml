
@{
    ViewBag.Title = "ChiaQuyen";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@if (Session["Staff"] != null)
{
    <div class="p-3 text-danger">Bạn không có quyền truy cập trang web này!!!</div>
}
else
{
<div class="col-12">
    <h3 class="p-2">Quản lý phân quyền</h3>

    <table class="table">
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Sđt
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Quyền
            </th>
            <th></th>
        </tr>

        @foreach (var m in ViewBag.Main)
        {
            <tr>
                <td>
                    @m.khachhang.hoten
                </td>
                <td>
                    @m.khachhang.email
                </td>
                <td>
                    @m.khachhang.diachi
                </td>
                <td>
                    @m.khachhang.dienthoai
                </td>
                <td>
                    @m.khachhang.ngaysinh
                </td>
                <td>
                    @m.khachhangrole.RoleName
                </td>
                <td>
                    @Html.ActionLink("Edit", "SuaQuyen", new { id = @m.khachhang.makh })
                </td>
            </tr>
        }

    </table>

</div>
}