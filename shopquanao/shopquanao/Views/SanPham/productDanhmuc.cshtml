@model IEnumerable<shopquanao.Models.SanPham>

@{
    ViewBag.Title = "productDanhmuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Tất cả sản phẩm -->
<div class="body">
    <div class="col-md-12">
        <div class="section-heading">
            <div class="line-dec"></div>
            Loại
        </div>
    </div>

    <div>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-3">
                <a href="@Url.Action("Details", "SanPham", new { id = item.masp })">
                    <div class="featured-item">
                        <img src="@item.hinh" alt="Item 8">
                        <h4>@Html.DisplayFor(modelItem => item.tensp)</h4>
                        <h6>@String.Format("{0:N0}", item.giaban)</h6>
                    </div>
                </a>
            </div>
            }

        </div>



    </div>



</div>
<!-- End Tất cả sản phẩm -->
